                                       </children>
                                    </AnchorPane>
                                </content>
                              </ScrollPane>
                              <AnchorPane prefHeight="48.0" prefWidth="177.0">
                                 <children>
                                    <Button fx:id="ResetButton" layoutX="14.0" layoutY="10.0" mnemonicParsing="false" onAction="#onResetClick" prefHeight="46.0" prefWidth="147.0" text="Reset" AnchorPane.bottomAnchor="12.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="12.0" />
