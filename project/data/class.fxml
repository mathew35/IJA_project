                                 </VBox.margin>
                              </Button>
                              <ComboBox fx:id="ChoiceChildClass" prefWidth="200.0" promptText="Select Child Class">
                                 <VBox.margin>
                                    <Insets left="5.0" right="5.0" top="5.0" />
                                 </VBox.margin>
                              </ComboBox>
                              <Button fx:id="ChangeParentButton" mnemonicParsing="false" onAction="#onChangeParentClick" prefWidth="200.0" text="Change Parent">
                                 <VBox.margin>
                                    <Insets left="5.0" right="5.0" top="5.0" />
                                 </VBox.margin>
                              </Button>
                              <Label fx:id="ClassErrorLabel" textFill="RED" wrapText="true">
                                 <padding>
                                    <Insets left="5.0" right="5.0" top="5.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets left="5.0" right="5.0" top="5.0" />
                                 </VBox.margin>
                              </Label>
                           </children>
                        </VBox>
                        <TreeView fx:id="ClassTree" onContextMenuRequested="#selectItem" onMouseClicked="#selectItem" prefWidth="519.0" />
                        <SplitPane dividerPositions="0.85" orientation="VERTICAL" prefHeight="486.0" prefWidth="291.0">
                          <items>
                              <ScrollPane fx:id="ClassScrollPane" prefHeight="408.0" prefWidth="280.0">
                                <content>
                                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="408.0" prefWidth="289.0">
                                       <children>
                                          <TextField fx:id="ClassName" layoutX="-1.0" layoutY="6.0" prefHeight="25.0" prefWidth="172.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" />
