<project>
    <condition property="isWin">
        <os family="windows"/>
    </condition>
    <condition property="isUnix">
        <os family="unix"/>
    </condition>

    <target name="setWinLib" if="isWin">
      <property name="system" value="win" />
    </target>
  
    <target name="setUnixLib" if="isUnix">
      <property name="system" value="unix" />
    </target>

    <target name="test" depends="setWinLib, setUnixLib">
        <mkdir dir="${system}ant" />
      </target>

    <path id="class.path">
        <fileset dir="lib">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <target name="clean">
        <delete dir="build"/>
        <delete dir="dest"/>
        <delete dir="target"/>
    </target>

    <target name="compile" depends="setWinLib, setUnixLib">
        <mkdir dir="build"/>
        <mkdir dir="target"/>
        <javac srcdir="src" destdir="build" includeantruntime="false">
            <modulepath path="lib/javafx-${system}-sdk-11.0.2/lib"/>
            <modulepath path="lib/jackson-2.13.2"/>
            <compilerarg line="--add-modules javafx.controls,javafx.fxml,com.fasterxml.jackson.core,com.fasterxml.jackson.annotation,com.fasterxml.jackson.databind"/>
            <classpath refid="class.path"/>
        </javac>

        <mkdir dir="dest"/>
        <jar destfile="dest/project.jar" basedir="build">
            <manifest>
                <attribute name="Main-Class" value="project.Main"/>
            </manifest>
            <zipgroupfileset dir="lib" includes="**/*.jar"/>
            <fileset file="data/hello-view.fxml"/>
            <fileset file="target/diagram.json"/>
        </jar>
    </target>

    <target name="run">
        <java jar="dest/project.jar" fork="true">
            <modulepath path="lib/javafx-win-sdk-11.0.2/lib"/>
            <jvmarg line="--add-modules javafx.controls,javafx.fxml"/>
        </java>
    </target>
    <target name="dbg" depends="setWinLib, setUnixLib">
        <mkdir dir="build"/>
        <javac srcdir="src" destdir="build" includeantruntime="false">
            <modulepath path="lib/javafx-${system}-sdk-11.0.2/lib"/>
            <compilerarg line="--add-modules javafx.controls,javafx.fxml"/>
            <classpath refid="class.path"/>
        </javac>

        <mkdir dir="dest"/>
        <jar destfile="dest/dbg.jar" basedir="build">
            <manifest>
                <attribute name="Main-Class" value="project.Debug"/>
            </manifest>
            <zipgroupfileset dir="lib" includes="**/*.jar"/>
        </jar>
        <java jar="dest/dbg.jar" fork="true">
            <modulepath path="lib/javafx-win-sdk-11.0.2/lib"/>
            <jvmarg line="--add-modules javafx.controls,javafx.fxml"/>
        </java>
    </target>

</project>